<% include header.ejs %>
<div class="main">

    <h1>Issues :</h1>

    <div class="row">
        <div class="col-xl-5">
            <% for(var i = 0; i < data.length ; i++) {
                var problem = data[i];
            %>
            <br>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= problem.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= problem.desc %></h6>
                    <% if (problem.photo != ""){ %>
                        <img src="<%= problem.photo %>" width="150" height="150"/>
                        <br>
                        <br>
                    <% } %>
                    <% if (!problem.isSeen){ %>
                        <a href="/web/mark/<%= problem._id %>" class="card-link">Mark as seen</a>
                    <% } %>
                    <% if (!problem.isApproved){ %>
                        <a href="/web/approve/<%= problem._id %>" class="card-link">Approve</a>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <% if(data.length == 0){ %>
        <div class="main card text-center">
            <div class="card-header">
                No Issues Available !
            </div>
            <div class="card-body">
                <p class="card-text">There is no issues in your department.</p>
            </div>
            <div class="card-header">
            </div>
        </div>
</div>
<% } %>

</div>

<% include footer.ejs %>